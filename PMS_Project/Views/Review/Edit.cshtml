@model DL_PMS.Model.ContentEditVM

@{
    ViewData["Title"] = "Edit";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <style>
        body {
            /* background-color: #1a1a1a; */
            margin: 0;
            padding: 0;
        }

        .card {
            background-color: #d5d4d4;
            border-radius: 8px;
            padding: 30px;
            width: 500px;
        }

        h3 {
            color: #1a50a0;
            text-align: center;
            margin-bottom: 20px;
        }

        form {
            display: flex;
            flex-direction: column;
        }

        input , select {
            margin-bottom: 15px;
            padding: 10px;
            border-radius: 5px;
            border: 1px solid black;
            background-color: #d8d8d8;
        }

        button {
            background-color: #1b81da;
            color: #fff;
            padding: 10px;
            border-radius: 8px;
        }

            button:hover {
                background-color: #0741ac;
            }
    </style>
</head>
<body>

    <div class="offset-4 mt-5">
        <div class="card">
            <h3>Content Review</h3>
            <div class="">
                <form asp-action="Edit" class="ms-2">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <!-- Hidden field for CaseStudyId -->
                    <input type="hidden" name="CaseStudyId" value="@Model.CaseStudyId" />
                    <!-- Hidden field for CaseStudyId -->
                    <input type="hidden" name="AssId" value="@Model.AssID" />
                    <div class="form-group">
                        <label asp-for="CaseStudy" class="control-label"></label>
                        <input asp-for="CaseStudy" class="form-control" />
                        <span asp-validation-for="CaseStudy" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @* <label asp-for="Sol1" class="control-label"></label> *@
                                <input asp-for="Sol1" class="form-control" placeholder="Solution 1" />
                                @* <span asp-validation-for="Sol1" class="text-danger"></span> *@
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <select asp-for="CompId1" class="form-control" asp-items="ViewBag.Comp">
                                    <option value="">-- Select a Competency --</option>
                                </select>
                            </div>
                            
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @* <label asp-for="Sol2" class="control-label"></label> *@
                                <input asp-for="Sol2" class="form-control" placeholder="Solution 2" />
                                @* <span asp-validation-for="Sol1" class="text-danger"></span> *@
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <select asp-for="CompId2" class="form-control" asp-items="ViewBag.Comp">
                                    <option value="">-- Select a Competency --</option>
                                </select>
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @* <label asp-for="Sol3" class="control-label"></label> *@
                                <input asp-for="Sol3" class="form-control" placeholder="Solution 3" />
                                @* <span asp-validation-for="Sol1" class="text-danger"></span> *@
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <select asp-for="CompId3" class="form-control" asp-items="ViewBag.Comp">
                                    <option value="">-- Select a Competency --</option>
                                </select>
                                @* <span asp-validation-for="Sol3" class="text-danger"></span> *@
                            </div>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @* <label asp-for="Sol4" class="control-label"></label> *@
                                <input asp-for="Sol4" class="form-control" placeholder="Solution 4" />
                                @* <span asp-validation-for="Sol1" class="text-danger"></span> *@
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <select asp-for="CompId4" class="form-control" asp-items="ViewBag.Comp">
                                    <option value="">-- Select a Competency --</option>
                                </select>
                                @* <span asp-validation-for="Sol2" class="text-danger"></span> *@
                            </div>

                        </div>
                    </div>
                    
                    <button type="submit">Save</button>
                    @* <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div> *@
                </form>
            </div>
        </div>
    </div>
   
</body>
</html>

