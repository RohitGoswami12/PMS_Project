@model DL_PMS.Model.CreateContentVM

@{
    ViewData["Title"] = "CreateContent";
}

<style>
    body {
        /* background-color: #1a1a1a; */
        margin: 0;
        padding: 0;
    }

    .card {
        background-color: #d5d4d4;
        border-radius: 8px;
        padding: 30px;
        width: 500px;
    }

    h3 {
        color: #1a50a0;
        text-align: center;
        margin-bottom: 20px;
    }

    form {
        display: flex;
        flex-direction: column;
    }

    input , select{
        margin-bottom: 15px;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid black;
        background-color: #d8d8d8;
    }

    button {
        background-color: #1b81da;
        color: #fff;
        padding: 10px;
        border-radius: 8px;
    }

        button:hover {
            background-color: #0741ac;
        }
</style>

<div class="offset-4 mt-5">
    <div class="card">
        <h3>Create Content</h3>
        <div class="">
            <form asp-action="CreateContent">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    @* <label asp-for="AssessmentId" class="control-label"></label> *@
                    @* <input asp-for="AssessmentId" class="form-control" /> *@
                    <select asp-for="AssessmentId" class="form-control" asp-items="ViewBag.Assment">
                        <option value="">--Select Assessment--</option>
                    </select>
                    <span asp-validation-for="AssessmentId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @* <label asp-for="Casestudy" class="control-label"></label> *@
                    <input asp-for="Casestudy" class="form-control" placeholder="Type Case Study"/>
                    <span asp-validation-for="Casestudy" class="text-danger"></span>
                </div>

                <!-- Solution and Competency in the same row -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @* <label asp-for="Sol1" class="control-label"></label> *@
                            <input asp-for="Sol1" class="form-control" placeholder="Solution 1" />
                            <span asp-validation-for="Sol1" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @* <label asp-for="CompId1" class="control-label"></label> *@
                            @* <input asp-for="CompId1" class="form-control" /> *@
                            <select asp-for="CompId1" class="form-control" asp-items="ViewBag.Comp">
                                <option value="">--Select Competency--</option>
                            </select>
                            <span asp-validation-for="CompId1" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Repeat for other Solution and Competency pairs -->
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input asp-for="Sol2" class="form-control" placeholder="Solution 2" />
                            <span asp-validation-for="Sol2" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <select asp-for="CompId2" class="form-control" asp-items="ViewBag.Comp">
                                <option value="">--Select Competency--</option>
                            </select>
                            <span asp-validation-for="CompId2" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input asp-for="Sol3" class="form-control" placeholder="Solution 3" />
                            <span asp-validation-for="Sol3" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <select asp-for="CompId3" class="form-control" asp-items="ViewBag.Comp">
                                <option value="">--Select Competency--</option>
                            </select>
                            <span asp-validation-for="CompId3" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input asp-for="Sol4" class="form-control" placeholder="Solution 4" />
                            <span asp-validation-for="Sol4" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <select asp-for="CompId4" class="form-control" asp-items="ViewBag.Comp">
                                <option value="">--Select Competency--</option>
                            </select>
                            <span asp-validation-for="CompId4" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <button type="submit">Create</button>
                @* <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div> *@
            </form>
        </div>
    </div>
</div>



